{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "g++.exe build active file",
      "command": "D:\\mingw64\\mingw64\\bin\\g++.exe",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\build\\${fileBasenameNoExtension}.exe",
        //"-mwindows",
        "-O0", // 优化级别
        "-ggdb3", // 生成和调试有关的信息
        "-Wall", // 开启额外警告
        "-std=c++11", // 使用c11标准
        "-Wno-format",
        "-finput-charset=UTF-8", //输入编译器文本编码 默认为UTF-8
        "-fexec-charset=UTF-8",
        "-D _USE_MATH_DEFINES",
      ],
      "options": {
        "cwd": "D:\\mingw64\\mingw64\\bin"
      },
      "problemMatcher": {
        "owner": "cpp",
        "fileLocation": [
          "absolute",
        ],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}